@model TesteDotNet.Core2._0.Models.CadastroViewModel;


@{
    ViewData["Title"] = "Apagar";
}

<h3 class="page-header">Detalhe do Item</h3>

@using (Html.BeginForm("ApagarConfirma", "Home"))
{
<div class="row">
    <div class="form-group col-md-8">
        <label for="campo1">Nome:</label>
        @Html.DisplayFor(model => model.Item.Name)
    </div>

    <div class="form-group col-md-8">
        <label for="campo2">Descrição:</label>
        @Html.DisplayFor(model => model.Item.Description)
    </div>

    <div class="form-group col-md-6">
        <label for="campo3">Categoria:</label>
        @Html.DisplayFor(modelItem => Model.Categories.Where(x => x.Id == Model.Item.CategoryID).FirstOrDefault().CategoryName)
    </div>

</div>

<hr />
<div id="actions" class="row">
    <div class="col-md-12">
        @*<button type="submit" class="btn btn-primary">Confirmar</button>*@
        <div class="btn btn-default">
            @Html.ActionLink("Confirmar", "ApagarConfirma", new { id = Model.Item.Id})
        </div>
        
            <div class="btn btn-default">
                @Html.ActionLink("Cancelar", "Index")
            </div>

        </div>
    </div>
}