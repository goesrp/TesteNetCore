@model TesteDotNet.Core2._0.Models.CadastroViewModel;

@{
    ViewData["Title"] = "Editar";
}

<h3 class="page-header">Editar Item</h3>
@using (Html.BeginForm("EditarItem", "Home"))
{
    <div class="row">
        <div class="form-group col-md-8">
            <label>Nome:</label>
            @Html.TextBoxFor(x => x.Item.Name, new { Class = "form-control" })
        </div>

        <div class="form-group col-md-8">
            <label>Descrição:</label>
            @Html.TextBoxFor(x => x.Item.Description, new { Class = "form-control" })
        </div>

        <div class="form-group col-md-6">
            @Html.DisplayNameFor(model => model.Category)
            @Html.DropDownListFor(x => x.Item.CategoryID, new SelectList(Model.Categories, "Id", "CategoryName"))
        </div>
    </div>

    <hr />
    <div id="actions" class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
            @Html.ActionLink("Cancelar", "Index", new { Class = "btn btn-default" })
        </div>
    </div>
}
